<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom,#eef2f7,#ffffff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.courseapp.controllers.UserNamaPanelController">

    <children>

        <!-- Левое меню -->
        <VBox fillWidth="true" prefWidth="230" spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 0 20 20 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 20, 0, 0, 0);">

            <Label alignment="CENTER" prefHeight="39.0" prefWidth="191.0" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1f2d5a;" text="COURSES" />
            <Separator />

            <Button fx:id="btnMyCourses" prefWidth="180" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #6c7a98; -fx-padding: 8 0;" text="Мои курсы" />
            <Button fx:id="btnCatalog" prefWidth="180" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #6c7a98; -fx-padding: 8 0;" text="Каталог" />
            <Button fx:id="btnProfile" prefWidth="180" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-text-fill: #6c7a98; -fx-padding: 8 0;" text="Профиль" />

            <Pane prefHeight="300" />

            <Button onAction="#logout" prefWidth="180" style="-fx-background-color: #ff6262; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 10;" text="Выйти" />

        </VBox>

        <!-- Основная область -->
        <StackPane fx:id="contentPane" layoutX="260" layoutY="40" prefHeight="560" prefWidth="600">

            <!-- Мои курсы -->
            <VBox fx:id="paneMyCourses" spacing="25" visible="true">
                <Label fx:id="welcomeLabel" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1f2d5a;" text="Добро пожаловать!" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: #6c7a98;" text="Ваши активные курсы" />

                <!-- Можно оставить HBox или FlowPane -->
                <FlowPane fx:id="flowMyCourses" hgap="20" vgap="20" />
            </VBox>

            <!-- Каталог -->
            <VBox fx:id="paneCatalog" spacing="25" visible="false">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1f2d5a;" text="Каталог курсов" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: #6c7a98;" text="Все доступные курсы" />

                <!-- FlowPane для карточек -->
                <FlowPane fx:id="flowCatalog" hgap="20" vgap="20" />
            </VBox>

            <!-- Профиль -->
            <VBox fx:id="paneProfile" spacing="25" visible="false">
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1f2d5a;" text="Профиль пользователя" />
            </VBox>

        </StackPane>

    </children>
</AnchorPane>
