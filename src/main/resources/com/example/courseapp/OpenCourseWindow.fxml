<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.courseapp.controllers.OpenCourseWindowController"
            prefWidth="500" prefHeight="400">

    <top>
        <Label fx:id="titleLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 15;" />
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 15;">
                <Label fx:id="descLabel" wrapText="true" style="-fx-font-size: 16;" />
                <Label fx:id="levelLabel" style="-fx-font-size: 14; -fx-text-fill: #4a6bff;" />
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
