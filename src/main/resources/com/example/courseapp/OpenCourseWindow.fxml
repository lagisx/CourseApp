<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.courseapp.controllers.OpenCourseWindowController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: #f5f7fa;">

    <top>
        <Label fx:id="titleLabel"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20; -fx-text-fill: #1f2d5a;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-padding: 10;">
            <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 15;">

                <VBox style="-fx-background-color: white;
                             -fx-background-radius: 15;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0, 0, 5);
                             -fx-padding: 20;"
                      spacing="10">

                    <Label fx:id="descLabel" wrapText="true"
                           style="-fx-font-size: 16px; -fx-text-fill: #2C3E50;" />

                    <Label fx:id="levelLabel"
                           style="-fx-font-size: 14px; -fx-text-fill: #4a6bff; -fx-font-weight: bold;" />

                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
